  <div class="group">
    <%= f.label :app_path, t("activerecord.attributes.account.app_path", :default => "App path"), :class => :label %>
    <%= f.text_field :app_path, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :username, t("activerecord.attributes.account.username", :default => "Username"), :class => :label %>
    <%= f.text_field :username, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :password, t("activerecord.attributes.account.password", :default => "Password"), :class => :label %>
    <%= f.password_field :password, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :category_id, t("activerecord.attributes.account.category_id", :default => "Hamster Category"), :class => :label %>
    <%= f.select :category_id, Category.all.collect{|c| [c.name, c.id]} %>
  </div>

  <% if !@account.new_record? && @account.companies.length > 0 -%>
  <div class="group<%= " highlighted" if @account.company_id.blank?%>">
    <%= f.label :company_id, t("activerecord.attributes.account.company_id", :default => "Basecamp Company"), :class => :label %>
    <%= f.select :company_id, @account.companies.collect{|c| [c.name, c.id]} %>
  </div>
  <% end -%>

  <% if !@account.new_record? && @account.people.length > 0 -%>
  <div class="group<%= " highlighted" if @account.user_id.blank?%>">
    <%= f.label :user_id, t("activerecord.attributes.account.user_id", :default => "Basecamp User"), :class => :label %>
    <%= f.select :user_id, @account.people.collect{|p| ["#{p.first_name} #{p.last_name}", p.id]} %>
  </div>
  <% end -%>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => @account.company_id.blank? ? "Next" : "Save")}") %> <%= t("web-app-theme.save", :default => @account.company_id.blank? ? "Next" : "Save") %>
  </button>  
  <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}") + " " + t("web-app-theme.cancel", :default => "Cancel"), accounts_path, :class => "button" %> 
</div>

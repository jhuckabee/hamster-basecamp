<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", accounts_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_account_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Accounts</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">App path</th>
          <th>Username</th>
          <th>Category</th>
          <th>Basecamp User ID</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @accounts.each do |account| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= link_to account.app_path, account_path(account) %></td>
          <td><%= account.username %></td>
          <td><%= account.category.name %></td>
          <td><%= account.user_id %></td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", account_path(account) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_account_path(account) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", account_path(account), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>
